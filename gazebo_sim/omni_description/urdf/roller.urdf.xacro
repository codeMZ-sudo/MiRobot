<?xml version="1.0"?>
<robot name="omni_robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="roller_link_mass"     value="0.0347" /> 
  <xacro:property name="roller_link_r"        value="0.012"/>
  <xacro:property name="roller_link_h"        value="0.062"/>

  
  <xacro:macro name="zm_roller_v0" params="prefix parent origin_x origin_y rotation_x rotation_z">
	<joint name="${prefix}_joint" type="continuous">
	  <parent link="${parent}"/>
	  <child link="${prefix}"/>
	  <origin xyz="${origin_x} ${origin_y} 0" rpy="${rotation_x} 0 ${rotation_z}"/>
      <axis xyz="0 0 1"/>
	  <dynamics damping="0.01" friction="0.0"/>
	</joint>

	<link name="${prefix}">
	  <visual>
	        <origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
		  <mesh filename="package://omni_description/meshes/mecanum_roller.stl" scale="0.009 0.009 0.009"/>
		</geometry>
		<material name="grey"/>
	  </visual> 
	  
	  <collision>
		<geometry>
		  <mesh filename="package://omni_description/meshes/mecanum_roller.stl" scale="0.009 0.009 0.009"/>
		</geometry>
	  </collision>
	  
